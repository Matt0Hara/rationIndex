<div id="itemNew" class="reveal-modal" data-reveal aria-labelledby="modalTitle"
 aria-hidden="true" role="dialog">
  <h2 id="modalTitle">Add a new food item</h2>
  <%= form_for :food_item, url: food_store_food_items_path(@food_store) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :expiration_date %>
    <%= f.text_field :expiration_date %>

    <%= f.label :entry_date %>
    <%= f.text_field :entry_date %>

    <%= f.submit "Create" %>
  <% end %>
  <a class="close-reveal-modal" aria-label="Close">&#215;</a>
</div>
